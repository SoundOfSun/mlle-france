<div class="projects-layout">
  <div class="dev-projects">
    <div class="title-dev">
      <h2>coding projects</h2>
    </div>
    <div class="index-cards">
      <% @projects.each do |project| %>
        <% if project.job == 'coding' %>
          <div class="index-card">
            <div class="i-card-body">
              <span class="card-category"><%= project.category.capitalize %></span>
            </div>
            <div class="i-card-footer">
              <h3><%= project.name.capitalize %></h3>
              <p><%= project.description %></p>
              <p><%= project.date %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="teach-projects">
    <div class="title-teach">
      <h2>teaching projects</h2>
    </div>
    <div class="index-cards">
      <% @projects.each do |project| %>
        <% if project.job == 'teaching' %>
          <div class="index-card">
            <div class="i-card-body">
              <span class="card-category"><%= project.category.capitalize %></span>
            </div>
            <div class="i-card-footer">
              <h3><%= project.name.capitalize %></h3>
              <p><%= project.description %></p>
              <p><%= project.date %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
